<h2>Recipes
  <%= link_to "+", new_user_recipe_path(@user) %>
</h2>
<div class="recipes_container">
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <%= link_to user_recipe_path(recipe.creator, recipe) do %>
        <div class="recipe_name"><%= recipe.name %></div>
      <% end %>
    </div>
  <% end %>
</div>
